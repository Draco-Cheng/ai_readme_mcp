    "smoke": "ts-node --esm scripts/smoke-test.ts"
  },
  "keywords": [
    "mcp",
    "documentation",
    "automation",
    "ai-readme"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.2",
    "fs-extra": "^11.3.2",
    "globby": "^15.0.0",
