{
  "name": "ai_readme_mcp",
  "version": "0.1.0",
  "description": "Standalone MCP server that discovers and updates layered AI_README.md guidance files.",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "ai-readme-mcp": "build/index.js"
  },
  "scripts": {
    "clean": "rimraf ./build",
    "build": "npm run clean && tsc",
    "dev": "ts-node --esm src/index.ts",
